<body>
<form action="/addacti" method="POST">
  <div class="form-group">
    <label for="nume">Nume activitate</label>
    <input type="text" class="form-control" id="nume" placeholder="Nume activitate" name="nume">
  </div>
  <div class="form-group">
    <label for="start">Ora de inceput</label>
    <input type="text" class="form-control" id="start" placeholder="Ora de inceput" name="start">
  </div>
  <div class="form-group">
    <label for="end">Ora de sfarsit</label>
    <input type="text" class="form-control" id="end" placeholder="Ora de sfarsit" name="end">
  </div>
  <div class="form-group">
    <label for="nr">Numar de locuri</label>
    <input type="number" class="form-control" id="nr" placeholder="Numar de locuri" name="nr">
  </div>

  <div class="form-group">
    <label for="select">Ziua</label>
    <select class="form-control" id="select" name ="ziua">
      <option value = "0">Luni</option>
      <option value = "1">Marti</option>
      <option value = "2">Miercuri</option>
      <option value = "3">Joi</option>
      <option value = "4">Vineri</option>
    </select>
  </div>
 <div class="form-group">
  <label for="comment">Informatii</label>
  <textarea class="form-control" rows="5" id="comment" placeholder="Informatii" name="info"></textarea>
</div>
  
  <button type="submit" class="btn btn-default">Submit</button>
</form>

</body>
